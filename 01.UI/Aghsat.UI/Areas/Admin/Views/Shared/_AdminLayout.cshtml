<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>



    <!-- Scripts-->
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.3/css/uikit.min.css" />*@

</head>
<body style="direction: rtl;   background-color: #CDDBD7;  ">

    <nav class="p-1 navbar navbar-expand-sm bg-dark text-right" style="border-bottom: 1px  solid red;">
        <button class="uk-button uk-button-default bg-danger " type="button" uk-toggle="target: #offcanvas-push"><span uk-icon="menu"></span></button>

        <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            @Html.Partial("_LoginPartial")
        </div>


    </nav>
    <!-- offcanvas -->
    <div id="offcanvas-push" uk-offcanvas=" overlay: true" class="">
        <div class="uk-offcanvas-bar uk-padding-remove bg-dark ">
            <!-- Nav -->
            <button class="uk-offcanvas-close" type="button" uk-close></button>
            <br />
            <br />
            <br />
            <div class="uk-margin">
                <div class="uk-inline w-100 mb-2">
                    <a class="uk-form-icon" href="#" uk-icon="icon: search"></a>
                    <input class="uk-input " type="text" placeholder="جستجو کنید">
                </div>
            </div>
            @Html.Action(MVC.Admin.PanelManagment.Menu())
        </div>
    </div>


    <!-- Container -->
    <div class="container-fluid @*body-content*@">


        @*@{Html.RenderPartial("_BreadCrumb");}*@
        <hr />
        @RenderBody()
        @Html.Partial("_Modal")

    </div>

    @Html.Partial("_ModalMain")

    @{
        if (ViewBag.Message != null)
        {
            @*@ViewBag.Message*@
            <script>
    $(function() {
                toastr.success(' @ViewBag.Message', 'asdo');
    });
            </script>



        }
    }
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/CustomScripts")
    <script>
        $(function() {

            $(".DatePersion").persianDatepicker({
                formatDate: "YYYY/MM/DD"
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @ToastrHelper.ProcessToastrs()

    @*@Scripts.Render("~/Scripts/Custom-datatables.min.js")*@

    <!-- UIkit JS -->
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.3/js/uikit.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.3/js/uikit-icons.min.js"></script>*@

    @RenderSection("scripts", required: false)
</body>
</html>

